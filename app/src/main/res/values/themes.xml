<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ArizHomemade" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colour_blue_110</item>
        <item name="colorPrimaryVariant">@color/colour_blue_122</item>
        <item name="colorOnPrimary">@color/colour_blue_210</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colour_blue_87</item>
        <item name="colorSecondaryVariant">@color/colour_blue_145</item>
        <item name="colorOnSecondary">@color/colour_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ArizHomemade.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ArizHomemade.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ArizHomemade.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>